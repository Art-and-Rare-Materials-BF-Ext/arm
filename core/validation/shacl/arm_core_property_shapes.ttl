:bf_note
    a sh:PropertyShape ;
    sh:path bf:note ;
    sh:nodeKind sh:IRI ;
    sh:class bf:Note ;  
    .

:bf_partOf
    a sh:PropertyShape ;
    sh:path dcterms:partOf ;
    sh:nodeKind sh:IRI ;
    .
        
:bf_subject
    a sh:PropertyShape ;
    sh:path bf:subject ;
    sh:nodeKind sh:IRI ;
    .
       
:bf_title 
    a sh:PropertyShape ;
    sh:path bf:title ;
    sh:nodeKind sh:IRI ; 
    sh:class bf:Title ;
    . 

:crm_P2_has_type
    a sh:PropertyShape ;
    sh:nodeKind sh:IRI ;
    sh:class skos:Concept ;
    .
        
# Restriction on the use of crm:P2_has_type to skos:Concepts in AAT's Material Hierarchy. 
:crm_P2_has_type_gvp_broaderExtended 
    sh:path ( crm:P2_has_type gvp:broaderExtended ) ;
    sh:hasValue aat:300010358 ;
    # NON-VALIDATING
    sh:name "AAT Material Terms" ;
    sh:description "Values for materials taken from http://vocab.getty.edu/page/aat/300010358 (AAT's materials hierarchy)" ;
    skos:editorialNote "Use lookup service; AAT materials is too big to load directly into an RDF editor, or list out in the SHACL" ;
    .
           
# The following sh:path ( crm:P2_has_type skos:inScheme ) isn't meant to be a field in the form, but rather state a restriction on the use of crm:P2_has_type to skos:Concepts in AAT.   
:crm_P2_has_type_skos_inScheme 
    sh:path ( crm:P2_has_type skos:inScheme ) ;
    sh:hasValue <http://vocab.getty.edu/aat/> ;
    # NON-VALIDATING
    rdfs:label "AAT Material Terms" ;
    rdfs:comment "Values for materials taken are to be taken from AAT." ;
    skos:editorialNote "Use lookup service; AAT materials is too big to load directly into an RDF editor, or list out in the SHACL" ;
    .
           
:rdf_type
    a sh:PropertyShape ;
    sh:path rdf:type ;
    sh:nodeKind sh:IRI ;
    .
    
:rdf_value
    a sh:PropertyShape ;
    sh:path rdf:value ;
    # Not required by the predicate, but this is how our models use it.
    sh:nodeKind sh:IRI ;
    .
